{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "coverage/",
    "src/tests/",
    "**/*.test.ts",
    "**/*.spec.ts",
    "*.config.js",
    "*.config.ts"
  ]
} 