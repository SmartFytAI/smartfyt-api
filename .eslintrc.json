{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_", 
      "varsIgnorePattern": "^_",
      "caughtErrorsIgnorePattern": "^_",
      "ignoreRestSiblings": true
    }],
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-arrow-callback": "error",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "coverage/",
    "src/tests/",
    "**/*.test.ts",
    "**/*.spec.ts",
    "*.config.js",
    "*.config.ts"
  ],
  "overrides": [
    {
      "files": ["src/plugins/auth.ts"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
} 